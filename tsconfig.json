{
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "__tests__",
    "**/*.test*",
    "**/*.spec*"
  ],
  "files": [],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "rootDir": ".",
    "outDir": "lib",
    "downlevelIteration": true,
    "strict": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./packages/ods-types"],
    "paths": {
      "@origin-digital/*": ["packages/*/src"]
    },
    // https://github.com/RyanCavanaugh/learn-a/#tsconfigsettingsjson
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "references": [
    {"path": "packages/ods-core/tsconfig.json"},
    {"path": "packages/ods-devtools/tsconfig.json"},
    {"path": "packages/ods-icons/tsconfig.json"},
    {"path": "packages/ods-themes/tsconfig.json"},
    {"path": "packages/ods-lab/tsconfig.json"}
  ]
}
