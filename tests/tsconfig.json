{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "target": "ES2020",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "pretty": true,
    "strict": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
